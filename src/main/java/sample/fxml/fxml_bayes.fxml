<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="sample.Bayes.BayesController" alignment="CENTER">
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Label fx:id="tab1_label_showText" text="Wybierz plik do przetestowania klasyfikatora Bayesa"
               GridPane.columnIndex="0"
               GridPane.rowIndex="0"/>
        <Button fx:id="tab1_button_choose" onAction="#handleSubmit" text="Wybierz plik" GridPane.columnIndex="1"
                GridPane.rowIndex="0"/>
        <Label fx:id="label_bayes_cm" text="Confusion matrix:" visible="false" GridPane.columnIndex="0"
               GridPane.rowIndex="4"/>
        <Label fx:id="label_bayes_accuracy" text="Accuracy:" visible="false" GridPane.columnIndex="0"
               GridPane.rowIndex="5"/>
    </GridPane>
</VBox>
