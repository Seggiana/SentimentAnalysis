<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="sample.TestingController" alignment="CENTER">
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Text text="Write analysed text and click 'Submit' "
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="2"/>
        <Label text="Input:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtA_ToAnalyse" minWidth="200" minHeight="100"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button text="Submit" onAction="#handleSubmit"
                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Label text="AFINN result:"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="lbl_result_AFINN" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Lexicon result:"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="lbl_result_Lexicon" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="Stanford NLP result:"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="lbl_result_SNLP" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    </GridPane>
</VBox>
