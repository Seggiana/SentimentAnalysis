<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111"
      fx:controller="sample.TestingController" alignment="CENTER">
    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Label fx:id="lbl_info" text="Napisz tekst do przetestowania i kliknij 'Testuj' "
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               GridPane.columnSpan="2"/>
        <Label fx:id="lbl_input" text="WejÅ›cie:"
               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="txtA_ToAnalyse" prefHeight="100" prefWidth="300"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Button fx:id="btn_submit" text="Testuj" onAction="#handleSubmit"
                GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <Label fx:id="lbl_res_AFINN" text="AFINN:"
               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="lbl_result_AFINN" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label fx:id="lbl_res_Lexi" text="Wynik Lexicon:"
               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="lbl_result_Lexicon" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label fx:id="lbl_res_Stan" text="Wynik Stanford NLP:"
               GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Label fx:id="lbl_result_SNLP" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <Label fx:id="lbl_res_DL4J" text="Wynik DL4J NLP:"
               GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <Label fx:id="lbl_result_DL4J" text="---"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    </GridPane>
</VBox>
